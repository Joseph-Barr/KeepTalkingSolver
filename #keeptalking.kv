#:kivy 1.11.1

<StartScreen>:     
    GridLayout:
        cols: 2
        rows: 2
        size: root.width, root.height
        row_default_height: 50
        row_force_default: True
        padding: 20
        Label:
            text: "Time: "

        TextInput:
            multiline: False
        
        Label:
            text: 'Is There A Parallel Port: '
        
        TextInput:
            multiline: False

<BombScreen>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height

        GridLayout:
            padding: 50
            cols: 2
            rows: 6
            spacing: 10

            Label: 
                text: 'Strikes: '
                font_size: 30

            TextInput:
                text: '0'
                input_type: 'number'
                multiline: False
                id: 'strikes'
            
            Label:
                text: 'Parallel Port?: '
                font_size: 30

            ToggleButton:
                text: 'Yes/No'
                group: 'parallel'
            
            Label:
                text: 'Does the Serial Number Have a Vowel?: '
                font_size: 20

            ToggleButton:
                text: 'Yes/No'
                group: 'serialVowel'

            Label:
                text: 'Last Digit of the Serial Number: '
                font_size: 20

            TextInput:
                text: '0'
                input_type: 'number'
                multiline: False
                id: 'serialNumber'
            
            Label:
                text: 'Enter all Batteries: '
                font_size: 30

            TextInput:
                text: 'AA D'
                multiline: True
                id: 'batteries'

            Label:
                text: 'Indicators: '
                font_size: 30 

            TextInput:
                text: 'FRK, 1'
                multiline: True
                id: 'indicators'

        GridLayout:
            size_hint: 0.3, 1
            cols: 1
            rows: 8

            Button:
                id: 'bomb'
                text: 'Bomb'
            Button:
                id: 'simonSays'
                text: 'Simon Says'
            Button:
                id: 'button'
                text: 'Buttons'
            Button:
                id: 'simpleWires'
                text: 'Simple Wires'
            Button:
                id: 'memory'
                text: 'Memory'
            Button:
                id: 'morseCode'
                text: 'Morse Code'
            Button:
                id: 'whosOnFirst'
                text: 'Whos On First'
            Button:
                id: 'passwords'
                text: 'Passwords'

    